{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "remoteCache": {
        "signature": false,
        "enabled": true
    },
    "tasks": {
      "build": {
        "outputs": ["dist/**", "build/**"],
        "dependsOn": ["^build"],
        "cache": true
      },
      "dev": {
        "cache": false,
        "dependsOn": ["^dev"]
      },
      "check-types": {
        "dependsOn": ["^check-types"]
      },
      "sync": {
        "dependsOn": []
      },
      "prettier": {
        "dependsOn": []
      },
      "lint": { 
        "dependsOn": ["prettier"] 
      },
      "start": {
        "cache": false,
        "dependsOn": ["^start"]
      },
      "docker": {
        "cache": false,
        "dependsOn": ["^docker"]
      }
    }
  }