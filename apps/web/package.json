{
  "name": "@project-arcturus/web",
  "version": "1.0.0",
  "type": "module",
  "files": [
    "src"
  ],
  "scripts": {
    "prettier": "prettier --write src webpack",
    "lint": "eslint --fix src",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "del:dist": "rm -rf dist",
    "make:dist": "mkdir dist",
    "make:css": "mkdir -p dist/css",
    "copy:design-tokens": "cp -R node_modules/@project-arcturus/design-tokens/build/css/*.css dist/css",
    "copy:assets": "cp -R public/assets dist",
    "copy:css": "cp public/css/index.css dist/css/",
    "copy:fonts": "cp -R public/css/fonts dist/css/",
    "bundle": "webpack --config webpack/webpack.prod.js",
    "create:html": "node dist/server/main.cjs && rm -rf dist/server && echo \"Done!\"",
    "build": "run-s del:* make:* copy:* bundle create:html",
    "dev": "webpack serve --config webpack/webpack.dev.js",
    "start": "serve dist"
  },
  "dependencies": {
    "@project-arcturus/components": "workspace:*",
    "@project-arcturus/design-tokens": "workspace:*",
    "@project-arcturus/renderer": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@chromatic-com/storybook": "^1.9.0",
    "@eslint/js": "^9.7.0",
    "@storybook/addon-essentials": "^8.3.2",
    "@storybook/addon-interactions": "^8.3.2",
    "@storybook/addon-links": "^8.3.2",
    "@storybook/addon-onboarding": "^8.3.2",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.5",
    "@storybook/blocks": "^8.3.2",
    "@storybook/react": "^8.3.2",
    "@storybook/react-webpack5": "^8.3.2",
    "@storybook/test": "^8.3.2",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "babel-loader": "^9.2.1",
    "css-loader": "^7.1.2",
    "dotenv": "^16.4.5",
    "eslint": "^9.11.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-storybook": "^0.8.0",
    "front-matter": "^4.0.2",
    "globals": "^15.8.0",
    "html-webpack-plugin": "^5.6.0",
    "json-loader": "^0.5.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "storybook": "^8.3.2",
    "style-loader": "^4.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^7.17.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0",
    "webpack-merge": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
